#!/usr/bin/env ruby

# Use:
#     color_palette_grille /path/to/color_palettes.json

begin
  require "color_palette"
rescue LoadError
  require "rubygems"
  require "color_palette"
end

if ARGV.empty?
  puts "Use: `color_palette_grille <palettes_file_path>`"
  exit 1
end

ColorPalette.palettes_config = ARGV.first
ColorPalette::Grille.run!